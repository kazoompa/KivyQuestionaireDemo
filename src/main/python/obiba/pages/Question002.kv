BoxLayout
    padding: sp(20)
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'

        Label:
            markup: True
            font_size: sp(20)
            text: "2) Listen to this [ref=audio][b][i]sound[/i][/b][/ref] and choose one of the possible answers below?"
            text_size: self.width, None
            size_hint_y: None
            on_ref_press: root.parent.play_sound("goat.wav")

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            GridLayout:
                lbl: lbl
                cols: 2
                row_default_height: lbl.texture_size[1] * 3
                row_force_default: True
                size_hint: 1, .3
                CheckBox:
                    group: "a"
                    active: True
                    size_hint_x: .1
                Label:
                    id: lbl
                    text: 'Sound of an elephant being molested!'
                    font_size: sp(18)
                    text_size: self.width, None
                CheckBox:
                    group: "a"
                    size_hint_x: .1
                Label:
                    text: "A crazy goat."
                    font_size: sp(18)
                    text_size: self.width, None
                CheckBox:
                    group: "a"
                    size_hint_x: .1
                Label:
                    text: "A big truck."
                    font_size: sp(18)
                    text_size: self.width, None
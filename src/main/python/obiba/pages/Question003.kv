BoxLayout
    padding: sp(20)
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: question
            markup: True
            font_size: sp(20)
            text: "3) Have a look at this [ref=video][b][i]video[/i][/b][/ref] and choose one of the possible answers below?"
            text_size: self.width, None
            size_hint_y: None
            on_ref_press: root.parent.play_video("holy_glou.avi")

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            GridLayout:
                lbl1: lbl1
                cols: 2
                row_default_height: lbl1.texture_size[1] * 3
                row_force_default: True
                size_hint: 1, .3
                CheckBox:
                    group: "a"
                    size_hint_x: .1
                    on_active: root.parent.set_active(question, lbl1.text)
                Label:
                    id: lbl1
                    text: 'Jesus had a bud revelation.'
                    font_size: sp(18)
                    text_size: self.width, None
                CheckBox:
                    group: "a"
                    size_hint_x: .1
                    on_active: root.parent.set_active(question, lbl2.text)
                Label:
                    id: lbl2
                    text: "Holy beer."
                    font_size: sp(18)
                    text_size: self.width, None
                CheckBox:
                    group: "a"
                    size_hint_x: .1
                    on_active: root.parent.set_active(question, lbl3.text)
                Label:
                    id: lbl3
                    text: "Stupid fridge magnets!"
                    font_size: sp(18)
                    text_size: self.width, None
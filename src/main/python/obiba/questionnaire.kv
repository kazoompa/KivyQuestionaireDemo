#:kivy 1.7.2


<Container>:
    canvas.before:
		Color:
			rgb: root.hex_to_percent("3c4a43")
		Rectangle:
			pos: self.pos
			size: self.size

<Questionnaire>:
    screens: screens
    footer: footer


    BoxLayout:
        orientation: 'vertical'

        ScreenManager:
            id: screens
            Screen:
                name: "intro"
                Intro:
            Screen:
                name: "q001"
                Question001:
            Screen:
                name: "q002"
                Question002:
            Screen:
                name: "q003"
                Question003:
            Screen:
                result: result
                on_enter: result.update_result()
                name: "conclusion"
                Conclusion:
                    id: result

        StackLayout:
            id: footer
            start_button: start_button
            orientation: 'rl-tb'
            size_hint: 1, None
            padding: sp(10)
            height: root.height * .1

            canvas:
                Color:
                    rgb: root.hex_to_percent("2e3934")
                Rectangle:
                    pos: self.pos
                    size: self.width, self.height
            WizardButton:
                background_color: 1, 1, 1, 0
                id: start_button
                text: "Start >"
                size_hint: None, 1
